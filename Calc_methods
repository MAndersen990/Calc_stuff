import math
def newton(x):
    #x = 3
    myList = []
    boolean = True
    i = 0
    while boolean:
        my_function = x**2 - 18
        my_derivitive = 3 * x**2
        x = x - (my_function/my_derivitive)
        result = '{:0.6g}'.format(x)
        if result not in myList:
            myList.append(result)
            i+=1
        elif result in myList:
            i+=1
            print(result)
           # print(i)
            boolean = False
#newton()

def fixed_point(x):
   # x = 1
    i = 0
    myList = []
    boolean = True
    while boolean:
        x = 1.5*(math.cos(x))
        result = '{:0.4g}'.format(x)
        #print(result)
        if result not in myList:
            i+=1
            myList.append(result)
        elif result in myList:
            i+=1
            print(result)
            print(i)
            boolean = False
#fixed_point()


    boolean = True
    while boolean:
        c = (a + b) / 2
        c_function = (3*c**3)-(9*c**2)+(15*c)-24
        if c_function < 0:
            a = c
            x =a
            myList.append(x)
        elif c_function >0:
            b = c
            x = b
            myList.append(x)
        if math.fabs(myList[i]-myList[i-1]) < error:
            result = '{:0.8g}'.format(myList[i])
            print(result)
            boolean = False
        i+=1

#bisection()

def stuff():
    print("This program helps determine the root of a number")

    print("What method are you using?")
    print("1 - Bisection")
    print("2 - Fixed point")
    print("3 - Newton's")

    choice = int(input("Please enter your choice here: "))

    if choice == 1:
        a = float(input("Please enter your a value: "))
        b = float(input("Please enter your b value: "))
        bisection(a,b)
    elif choice == 2:
        x = float(input("Please enter your x value: "))
        fixed_point(x)
    elif choice == 3:
        x = float(input("Please enter your x value: "))
        newton(x)
    else:
        print("That is not an option")
stuff()


